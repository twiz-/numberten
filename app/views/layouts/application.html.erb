<!DOCTYPE html>
<html>
<head>
  <title>Numberten</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <% if flash[:notice] %>
     <div class="alert alert-success">
       <button class="close" data-dismiss="alert">x</button>
       <%= flash[:notice] %>
     </div>
   <% end %>
   <% if flash[:alert] %>
     <div class="alert alert-error">
       <button class="close" data-dismiss="alert">x</button>
       <%= flash[:alert] %>
     </div>
   <% end %>
  <%= yield %>
  
</div>
</body>
</html>
